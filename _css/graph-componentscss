/* graph-components.css */
/* Base Graph Styling */
.graph-container {
    width: 100%;
    height: 600px;
    border: 3px solid var(--graph-accent-color, #ff4d00);
    border-radius: 12px;
    background: white;
    box-shadow: 
        0 4px 20px rgba(var(--graph-accent-rgb, 255, 77, 0), 0.3),
        0 8px 30px rgba(var(--graph-accent-rgb, 255, 0, 0), 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    margin: 20px 0;
}

/* Add a pseudo-element for extra effect */
.graph-container::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: linear-gradient(
        45deg,
        var(--graph-accent-color, #ff4d00) 0%,
        var(--graph-secondary-color, #ff9900) 50%,
        var(--graph-accent-color, #ff4d00) 100%
    );
    z-index: -1;
    filter: blur(20px);
    opacity: 0.3;
    animation: graphPulse 3s infinite alternate;
}

@keyframes graphPulse {
    0% { opacity: 0.2; }
    100% { opacity: 0.4; }
}

